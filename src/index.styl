body
  overflow hidden
  margin 0px

.main-content
  position relative 
  display flex
  flex-direction column
  justify-content space-evenly
  align-items center
  font-size calc(0.9vh + 0.5vw)
  width 100vw
  height 100vh

.background
  position absolute
  z-index -1

.wisdom
  color white
  font-family Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif
  display flex
  flex-direction column
  align-items center
  justify-content space-around
  -webkit-text-stroke 0.2em black

  .quote
    width 80%
    text-align left
    font-size 4em

  .author
    width 70%
    text-align right
    font-size 3em

.enlighten
  border: 0px;
  border-radius 50px
  background-color: cyan;
  min-height 10vh
  font-size 1.5em
  color white
  font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif
  display flex
  align-items center
  justify-content center
  padding-left 10px
  padding-right 10px

  &:hover
    background-color: white;
    color black
 